{
	"name": "WatchSeries Video Skipper",
	"version": "0.4",
	"description": "waits for the end of an episode on watchseries, does everything required to get to the next video when turned on.",
	"permissions": ["*://*.swatchseries.to/*", "*://*.streamplay.me/*", "tabs", "activeTab", "declarativeContent", "storage"],
	"background": {
 		"scripts": ["background.js"],
 		"persistent": false
	},
	"browser_action": {
		"default_icon": {
        	"16": "images/get_started16.png",
        	"32": "images/get_started32.png",
        	"48": "images/get_started48.png",
        	"128": "images/get_started128.png"
      }
	},
	"icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
	"manifest_version": 2
}
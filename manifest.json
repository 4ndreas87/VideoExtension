{
	"name": "WatchSeries Video Skipper",
	"version": "0.3",
	"description": "waits for the end of an episode on watchseries, does everything required to get to the next video when turned on.",
	"permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
	"background": {
 		"scripts": ["jquery-3.3.1.js", "background.js"],
 		"persistent": false
	},
	/*"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["runService.js"],
		"run_at": "document_end"
	}
	],*/
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
        	"16": "images/get_started16.png",
        	"32": "images/get_started32.png",
        	"48": "images/get_started48.png",
        	"128": "images/get_started128.png"
      }
	},
	"icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
	"manifest_version": 2
}